import javax.swing.Layout;
import javax.swing.JLabel;
import javax.swing.JTextField;
import java.swing.JButton;
import java.swing.JPasswordField;
import javax.swing.JFrame;

class Myframe extends JFrame implements ActionListener
{
	JLabel username;
	JTextField unmaetxt;
	JLabel userpassword;
	JPasswordField upassword;
	JButton button,resetbutton;

	
	Myframe()
	{
		setTitle("Login");
		username=new JLabel("username");
		unametxt=new JTextField(25);
		userpassword=new JLabel("password:");
		upassword=new JPasswordFiled(8);
		button = new JButton("Submit");
		resetbutton=new JButton("Reset");
	/*set layout*/
		setLayout(new FlowLayout());
	/*set bounfds to each comp*/
		username.setBounds(10,40,40,80);
		unametxt.setBounds(10,81,100,81);
		userpassword.setBounds(20,40,40,80);
		upassword.setBounds(20,81,100,80);
		button.setBounds(30,40,100,80);
		resetbutton.setBounds(35,40,100,89);
		

		
	/*add comp to frame*/
		add(username);
		add(unametxt);
		add(userpassword);
		add(upassword);
		add(button);
		add(resetbutton);
		resetbutton.addActionListener(this);
		button.addActionListener(this);
	}
}

public void actionPerformed(ActionEvent ae)
{
	if(ae.getActionCommand().equals("Reset"))
	{
		unametxt.setText("");
		upassword.setText("");
	}else if(ae.getActionCommand().equals("submit"))
	{

	}


}
public class Logindemo{

	public static void main(String[] args)
	{
		Myframe mf=new Myframe();
		mf.setBounds(0,0,300,50);
		mf.detVisible(true);
	}
}


